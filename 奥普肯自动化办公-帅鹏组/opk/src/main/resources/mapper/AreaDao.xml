<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.dao.AreaDao">
	<select id="findAreasByCid" resultType="com.company.pojo.Area">
		select * from area where
		cityId=#{cityId}
	</select>

	<select id="findAreastByAid" resultType="com.company.pojo.Area">
		select * from area where
		areaId=#{areaId}
	</select>


</mapper>